# ===========================================
# SERVER CONFIGURATION
# ===========================================
NODE_ENV=development
PORT=5000
HOST=localhost
API_VERSION=v1

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
# PostgreSQL Primary Database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=shubupad_dev
DB_USER=postgres
DB_PASSWORD=your_db_password
DB_SSL=false
DB_MAX_CONNECTIONS=20
DB_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=2000

# Database URLs for different environments
DATABASE_URL=postgresql://postgres:your_db_password@localhost:5432/shubupad_dev
TEST_DATABASE_URL=postgresql://postgres:your_db_password@localhost:5432/shubupad_test

# ===========================================
# REDIS CONFIGURATION
# ===========================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_TTL=3600
REDIS_URL=redis://localhost:6379

# ===========================================
# JWT & AUTHENTICATION
# ===========================================
JWT_SECRET=your_super_secret_jwt_key_here_minimum_32_characters
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your_refresh_token_secret_here
JWT_REFRESH_EXPIRES_IN=30d
BCRYPT_ROUNDS=12

# Session Configuration
SESSION_SECRET=your_session_secret_here_minimum_32_characters
SESSION_MAX_AGE=86400000

# ===========================================
# EMAIL CONFIGURATION
# ===========================================
# SMTP Settings
EMAIL_FROM=noreply@shubupad.com
EMAIL_FROM_NAME=ShubUpad Team

# SendGrid
SENDGRID_API_KEY=your_sendgrid_api_key_here

# AWS SES (Alternative)
AWS_SES_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key

# ===========================================
# FILE UPLOAD & STORAGE
# ===========================================
# AWS S3 Configuration
AWS_S3_BUCKET=shubupad-uploads
AWS_S3_REGION=us-east-1
AWS_CLOUDFRONT_URL=https://your-cloudfront-domain.cloudfront.net

# Upload Limits
MAX_FILE_SIZE=5242880
MAX_FILES_PER_REQUEST=10
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/webp

# ===========================================
# PAYMENT PROCESSING
# ===========================================
# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_SUCCESS_URL=http://localhost:3000/payment/success
STRIPE_CANCEL_URL=http://localhost:3000/payment/cancel

# ===========================================
# SEARCH ENGINE
# ===========================================
# Elasticsearch Configuration
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_USERNAME=
ELASTICSEARCH_PASSWORD=
ELASTICSEARCH_INDEX_PREFIX=shubupad
ELASTICSEARCH_MAX_RESULTS=100

# ===========================================
# EXTERNAL APIS
# ===========================================
# Analytics
MIXPANEL_TOKEN=your_mixpanel_token
GOOGLE_ANALYTICS_ID=GA-your-tracking-id

# Social Login (Optional)
GOOGLE_CLIENT_ID=your_google_oauth_client_id
GOOGLE_CLIENT_SECRET=your_google_oauth_client_secret
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret

# ===========================================
# RATE LIMITING
# ===========================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESS=true

# API Specific Rate Limits
AUTH_RATE_LIMIT_MAX=5
SEARCH_RATE_LIMIT_MAX=50
UPLOAD_RATE_LIMIT_MAX=10

# ===========================================
# SECURITY CONFIGURATION
# ===========================================
# CORS Settings
CORS_ORIGIN=http://localhost:3000,http://localhost:3001
CORS_CREDENTIALS=true

# Security Headers
HELMET_CONTENT_SECURITY_POLICY=true
HELMET_HSTS_MAX_AGE=31536000

# ===========================================
# CACHING CONFIGURATION
# ===========================================
CACHE_TTL_SHORT=300
CACHE_TTL_MEDIUM=1800
CACHE_TTL_LONG=3600
CACHE_TTL_VERY_LONG=86400

# ===========================================
# BACKGROUND JOBS
# ===========================================
# Bull Queue Configuration
QUEUE_REDIS_URL=redis://localhost:6379
QUEUE_CONCURRENCY=5
QUEUE_MAX_ATTEMPTS=3
QUEUE_BACKOFF_DELAY=5000

# Job Types
EMAIL_QUEUE_NAME=email-processing
IMAGE_QUEUE_NAME=image-processing
ANALYTICS_QUEUE_NAME=analytics-processing

# ===========================================
# MONITORING & LOGGING
# ===========================================
# Winston Logging
LOG_LEVEL=info
LOG_FILE_PATH=logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5
LOG_DATE_PATTERN=YYYY-MM-DD

# Sentry Error Tracking
SENTRY_DSN=your_sentry_dsn_here
SENTRY_ENVIRONMENT=development

# Health Check
HEALTH_CHECK_TIMEOUT=5000

# ===========================================
# FEATURE FLAGS
# ===========================================
ENABLE_PREMIUM_FEATURES=true
ENABLE_SOCIAL_FEATURES=true
ENABLE_ANALYTICS=true
ENABLE_RECOMMENDATIONS=true
ENABLE_MEAL_PLANNING=true

# ===========================================
# DEVELOPMENT SETTINGS
# ===========================================
# Debug Settings
DEBUG_SQL=false
DEBUG_CACHE=false
DEBUG_JOBS=false

# API Documentation
SWAGGER_ENABLED=true
SWAGGER_TITLE=ShubUpad API
SWAGGER_DESCRIPTION=Recipe Platform API Documentation
SWAGGER_VERSION=1.0.0

# ===========================================
# PRODUCTION OVERRIDES
# ===========================================
# These should be overridden in production
# REDIS_PASSWORD=your_production_redis_password
# DB_SSL=true
# CORS_ORIGIN=https://yourdomain.com
# SENTRY_ENVIRONMENT=production
# LOG_LEVEL=warn